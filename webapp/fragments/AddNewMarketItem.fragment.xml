<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:variant="sap.ui.comp.variants">
	<Dialog title="Add New Market Watch Item" width="500em">
		<f:SimpleForm editable="true" class="" layout="ResponsiveGridLayout" columnsM="5" columnsL="5" columnsXL="5" labelSpanM="5" labelSpanL="5">
			<Label id="lblnmwid" text="KPI ID"></Label>
			<Input id="inpnmwid" value="" visible="false" required="true"></Input>
			<Label id="lblnmwcat" text="Category"></Label>
			<Input id="inpnmwcat" value="" required="true"></Input>
			<Label id="lblnmwtitle" text="KPI Title"></Label>
			<Input id="inpnmwtitle" value="" required="true"></Input>
			<Label id="lblnmwrole" text="Roles"></Label>
			<Input id="inpnmwrole" value="" required="true"></Input>
			<Label id="lblnmwvis" text="Visibility"></Label>
			<!--<Input id="inpgisvis" value="" required="true"></Input>-->
			<CheckBox id="inpnmwvis" text="" selected="" required="true"/>
		</f:SimpleForm>
		<buttons>
			<Button text="Cancel" type="Default" press="closeAddNewMarketDialog"/>
			<Button type="Emphasized" icon="sap-icon://add"  press="onAddMarketItem" text="Add"/>
			<!--<Button type="Reject" press="onclearfilter" text="Clear"/>-->
		</buttons>
	</Dialog>
</core:FragmentDefinition>