<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
   <Dialog title="Upload Report" width="400px">
      <f:SimpleForm editable="true" layout="ResponsiveGridLayout" columnsM="5" columnsL="5" columnsXL="5" labelSpanM="5" labelSpanL="5">
         <Label id="fileattachid" text="Attachment ID" visible="false"></Label>
			<Input id="fileAttachmentId" value="" editable="false" visible="false" required="true"></Input>
         <Label text="Select File"></Label>
         <unified:FileUploader id="fileUploader" uploadUrl="/upload/url" change="onFileChange" icon="sap-icon://upload" buttonText="Choose File"/>
      </f:SimpleForm>
      <buttons>
         <Button text="Cancel" press="onCancelUpload"/>
         <Button text="Upload" press="onUploadFileattach"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>
