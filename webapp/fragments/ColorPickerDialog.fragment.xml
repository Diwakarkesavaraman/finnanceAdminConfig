<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:unified="sap.ui.unified">
	<Dialog title="Color Picker" 
			contentWidth="500px" 
			contentHeight="400px" 
			resizable="true" 
			draggable="true"
			type="Message">
		<content>
			<VBox class="sapUiMediumMargin">
				<unified:ColorPicker id="colorPicker" 
									mode="HSL" 
									change="onColorPickerChange"
									class="sapUiResponsiveMargin"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="OK" type="Emphasized" press="onColorPickerOK"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onColorPickerCancel"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>