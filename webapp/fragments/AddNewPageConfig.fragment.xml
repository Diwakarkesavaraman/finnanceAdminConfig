<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog id="addNewPageConfigDialog" title="Add New Page" contentWidth="400px" contentHeight="300px">
		<content>
			<VBox class="sapUiMediumMargin">
				<Label text="Page Title" required="true"/>
				<Input id="pageConfigTitleInput" value="" placeholder="Enter page title" required="true"/>
				
				<Label text="Roles" class="sapUiMediumMarginTop"/>
				<Input id="pageConfigRolesInput" value="" placeholder="Enter roles (comma separated)"/>
				
				<Label text="Visibility" class="sapUiMediumMarginTop"/>
				<CheckBox id="pageConfigVisibilityCheckBox" selected="true" text="Visible"/>
			</VBox>
		</content>
		<beginButton>
			<Button text="Add" type="Emphasized" press="onAddPageConfigItem"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCloseAddNewPageConfigDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>