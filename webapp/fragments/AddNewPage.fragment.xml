<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core"
	xmlns:variant="sap.ui.comp.variants">
	<Dialog title="Add New Page" width="500em">
		<f:SimpleForm editable="true" class="" layout="ResponsiveGridLayout" columnsM="5" columnsL="5" columnsXL="5" labelSpanM="5" labelSpanL="5">
			<Label text="Page Title"></Label>
            <Input id="pageTitleInput" value="" required="true"></Input>

            <Label text="Roles"></Label>
            <Input id="rolesInput" value=""></Input>

            <Label text="Visibility"></Label>
            <CheckBox id="visibilityCheckBox" text="" selected="false"/>
		</f:SimpleForm>
		<buttons>
			<Button text="Cancel" type="Default" press="closeAddNewPageDialog"/>
			<Button type="Emphasized" icon="sap-icon://add"  press="onAddPageItem" text="Add"/>
			<!--<Button type="Reject" press="onclearfilter" text="Clear"/>-->
		</buttons>
	</Dialog>
</core:FragmentDefinition>