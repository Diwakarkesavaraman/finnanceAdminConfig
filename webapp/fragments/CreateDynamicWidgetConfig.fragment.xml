                <Table id="dynamic" alternateRowColors="false" items="{ path: 'oAffiliateTabModel>/', sorter: {path: 'ZkpiId', descending: false}}" growing="true" class="blueBackground surveytablecls" mode="MultiSelect" selectionChange="onSelectionChange">
                    <columns>
                        <Column width="7rem">
                            <header>
                                <Text text="KPI ID" class="whiteLabel" />
