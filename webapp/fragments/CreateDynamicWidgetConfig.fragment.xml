                </HBox>
                <Panel expandable="true" expanded="true" headerText="Panel with a header text" width="auto" class="sapUiResponsiveMargin">
                    <content>
                        <VBox class="sapUiSmallMargin">
                            <form:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="Widget Config" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
                                <form:content>
                                    <Label id="widgetIdLabel" text="Widget ID" />
                                    <Input id="widgetId" value="{selectedValues>/widgetId}" editable="false" liveChange="onDataSourceChange" />
                                    <Label text="Widget Type" />
                                    <Select id="widgetType" items="{path: 'aWidgetTypeDropdownData>/'}" selectedKey="{selectedValues>/selectedWidgetType}">
                                        <core:Item text="{aWidgetTypeDropdownData>Text}" key="{aWidgetTypeDropdownData>Id}" />
                                    </Select>
                                    <Label text="Chart Type" />
                                    <Select id="chartType" items="{path: 'aChartTypeDropdownData>/'}" selectedKey="{selectedValues>/selectedChartType}">
                                        <core:Item text="{aChartTypeDropdownData>Text}" key="{aChartTypeDropdownData>Id}" />
                                    </Select>
                                    <Label text="Data Source" />
                                    <Input id="dataSourceId" value="{selectedValues>/selectedDataSource}" liveChange="onDataSourceChange" />
                                    <Button id="check" text="Check" enabled="true" press="checkQueryValidity" />
                                    <BusyIndicator id="busyIndicator" class="sapUiTinyMarginBottom" visible="false" />
                                    <core:Icon id="successIcon" src="sap-icon://message-success" visible="false" class="size1" color="#107e3e" />
                                </form:content>
                            </form:SimpleForm>
                        </VBox>
                        <HBox class="tblhdrcls">
