<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
	xmlns:viz.data="sap.viz.ui5.data" xmlns:w="sap.ui.integration.widgets" xmlns:f="sap.f" xmlns:tnt="sap.tnt"
	xmlns:codeeditor="sap.ui.codeeditor">
	<VBox id="createDynamicWidgetConfigContainer">
		<HBox class="tblhdrcls">
			<Text text="Dynamic Widget Config"/>
			<Button id="editBtn" text="Edit" enabled="false" press="handleEditPress"/>
			<Button id="saveBtn" text="Save" type="Emphasized" visible="true" press="handleSavePress"/>
			<Button id="submitBtn" text="Submit" visible="false" press="handleCancelPress"/>
			<Button id="deleteBtn" type="Reject" text="Delete" visible="true" press="deleteWidget"/>
		</HBox>
		<Panel expandable="true" expanded="true" headerText="Panel with a header text" width="auto" class="sapUiResponsiveMargin">
			<content>
				<VBox class="sapUiSmallMargin">
					<form:SimpleForm id="createWidgetSimpleForm" editable="true" layout="ResponsiveGridLayout" title="Widget Config" labelSpanXL="3" labelSpanL="3"
						labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
						columnsL="1" columnsM="1" singleContainerFullSize="false">
						<form:content>
							<Label id="createWidgetIdLabel" text="Widget ID"/>
							<Input id="createWidgetId" value="{selectedValues>/widgetId}" editable="false" liveChange="onDataSourceChange"/>
							<Label id="createWidgetNameLabel" text="Widget Name"/>
							<Input id="createWidgetName" value="{selectedValues>/widgetName}" editable="true" liveChange="onDataSourceChange"/>
							<Label text="Widget Type"/>
							<Select id="createWidgetType" items="{path: 'aWidgetTypeDropdownData>/'}" selectedKey="{selectedValues>/selectedWidgetType}">
								<core:Item text="{aWidgetTypeDropdownData>Text}" key="{aWidgetTypeDropdownData>Id}"/>
							</Select>
							<Label text="Chart Type"/>
							<Select id="createChartType" items="{path: 'aChartTypeDropdownData>/'}" selectedKey="{selectedValues>/selectedChartType}">
								<core:Item text="{aChartTypeDropdownData>Text}" key="{aChartTypeDropdownData>Id}"/>
							</Select>
							<Label text="Data Source"/>
							<Input id="createDataSourceId" value="{selectedValues>/selectedDataSource}" liveChange="onDataSourceChange"/>
							<Button id="createCheckBtn" text="Check" enabled="true" press="checkQueryValidity"/>
							<BusyIndicator id="createBusyIndicator" class="sapUiTinyMarginBottom" visible="false"/>
							<core:Icon id="createSuccessIcon" src="sap-icon://message-success" visible="false" class="size1" color="#107e3e"/>
						</form:content>
					</form:SimpleForm>
				</VBox>
				<HBox class="tblhdrcls">
					<Text text="Dynamic Widget Config"/>
					<Button id="createFormSubmit" text="Save" type="Emphasized" visible="true" press="getGroupedFormValues"/>
				</HBox>
				<Panel expanded="true" expandable="true" headerText="Bex Query Parameter" width="auto" class="sapUiResponsiveMargin">
					<content>
						<VBox class="sapUiSmallMargin">
							<form:SimpleForm id="createBexQueryParameterForm" editable="true" layout="ResponsiveGridLayout" title="Widget Config" labelSpanXL="3"
								labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
								columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
								<form:content></form:content>
							</form:SimpleForm>
						</VBox>
						<VBox class="sapUiSmallMargin">
							<BusyIndicator id="createTabBarBusyIndicator" visible="true" />
							<IconTabBar visible = "false" id="createIconTabBarInlineMode" headerMode="Inline" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
								<items>
									<IconTabFilter text="MetaData" key="info">
										<VBox class="sapUiSmallMargin">
											<form:SimpleForm id="createDataMappingForm" editable="true" layout="ResponsiveGridLayout" title="Widget Config" labelSpanXL="3" labelSpanL="3"
												labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
												columnsL="1" columnsM="1" singleContainerFullSize="false">
												<form:content></form:content>
											</form:SimpleForm>
										</VBox>
									</IconTabFilter>
									<IconTabFilter text="JSON" key="attachments">
										<Table id="createJsonDataTable" items="{jsonDataModel>/}" class="sapUiResponsiveMargin">
											<columns></columns>
											<items>
												<ColumnListItem></ColumnListItem>
											</items>
										</Table>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</VBox>
					</content>
				</Panel>
			</content>
		</Panel>
	</VBox>
</core:FragmentDefinition>