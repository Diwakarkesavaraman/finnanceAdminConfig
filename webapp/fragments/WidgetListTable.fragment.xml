<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
<Panel height="100%" class="admgisreppanelcls">
	<content>
	<VBox id="widgetListContainer">
		<HBox class="tblhdrcls">
			<Text text="Widget Configuration List"/>
			<Button id="addNewWidgetBtn" text="Add New Widget" type="Emphasized" press="onAddNewWidget"/>
		</HBox>
		
				<VBox class="sapUiSmallMargin">
					<BusyIndicator id="widgetListBusyIndicator" visible="false" />
					<!-- <Table id="widgetListTable" items="{widgetListModel>/}" class="sapUiResponsiveMargin"> -->
					<Table id="widgetListTable" alternateRowColors="false" items="{widgetListModel>/}"  growing="true"
					class="blueBackground surveytablecls" mode="MultiSelect" selectionChange="onSelectionChange">
						<columns>
							<Column>
								<Text text="Widget ID"  class="whiteLabel"/>
							</Column>
							<Column>
								<Text text="Widget Name"  class="whiteLabel"/>
							</Column>
							<Column>
								<Text text="Actions"  class="whiteLabel"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onWidgetListItemPress" type="Active">
								<cells>
									<Text text="{widgetListModel>Id}"/>
									<Text text="{widgetListModel>Text}"/>
									<HBox>
										<Button text="Delete" type="Reject" press="onDeleteWidgetFromList"/>
									</HBox>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</VBox>
			
	</VBox>
	</content>
	</Panel>
</core:FragmentDefinition>